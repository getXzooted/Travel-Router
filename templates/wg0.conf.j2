[Interface]
Address = {{ client_ip }}/24
PrivateKey = {{ final_private_key }}
DNS = {{ dns_server }}
MTU = 1280

# NOTE: Firewall rules are now managed by iptables-persistent 
# located at /etc/iptables/rules.v4. 
# This file only handles the Routing inside the tunnel.

[Peer]
PublicKey = {{ vpn_server_pubkey }}
Endpoint = {{ vpn_endpoint }}:{{ vpn_port }}
AllowedIPs = 0.0.0.0/0
PersistentKeepalive = 25